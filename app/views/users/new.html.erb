<h2>Sign Up</h2>


<%= form_for(@user, url: signup_path) do |f| %>

    <%= render 'shared/error_messages' %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>

    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <br>

    <%= f.submit "Create Account"%>
<% end %>
