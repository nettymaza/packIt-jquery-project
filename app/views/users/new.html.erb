<h2>Sign Up</h2>


<%= form_for(@user, url: signup_path) do |f| %>

    <%= render 'shared/error_messages' %>
    <br>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <br>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
    <br>

    <%= f.submit "Create Account"%>
<% end %>
