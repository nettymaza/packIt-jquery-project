<h2>Create a Trip</h2>

<%= form_for @trip do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>

    <%= f.label :duration %>
    <%= f.text_field :duration %>
    <br>

    <%= f.label :start_date%>
    <%= f.date_field :start_date %>
    <br>

    <%= f.submit "Create Trip"%>
<% end %>
