<h2>Create a Trip</h2>

<%= form_for @trip do |f| %>

    <%= render 'shared/trip_error_messages' %>


    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <br>
    <div class="field">
      <%= f.label :duration %><br>
      <%= f.text_field :duration %>
    </div>
    <br>
    <div class="field">
      <%= f.label :start_date %><br>
      <%= f.date_field :start_date %>
    </div>
    <br>
    <div class="field">
      <h3>Create Packing List</h3>
      <h5><i>Add Items to List</i></h5>
      <br>
      <% 6.times.each do %>
        <%= f.fields_for :items, @trip.items.build do |trip_fields| %>
          <%= trip_fields.text_field :name %>
        <% end %>
      <% end %>
    </div>
    <br>

    <br>
    <%= f.submit %>
<% end %>
